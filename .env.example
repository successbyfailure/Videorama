# Videorama v2.0.0 - Environment Variables Example
# Copy this file to .env and fill in your values

# Application
APP_NAME=Videorama
VERSION=2.0.0
DEBUG=True

# Docker Images (GitHub Container Registry)
# Leave empty to use default images from ghcr.io/successbyfailure/videorama
# Or specify custom images/tags
BACKEND_IMAGE=ghcr.io/successbyfailure/videorama/backend:latest
FRONTEND_IMAGE=ghcr.io/successbyfailure/videorama/frontend:latest

# Docker User/Group (for permissions)
# Run `id` to get your user and group IDs
# Example: VIDEORAMA_UID=1000, VIDEORAMA_GID=1000
VIDEORAMA_UID=1000
VIDEORAMA_GID=1000

# Library Root (host path to mount as /storage in containers)
# This is where your video libraries will be stored
# Example: VIDEORAMA_LIBRARY_ROOT=/mnt/media/videos
VIDEORAMA_LIBRARY_ROOT=./storage

# Database
DATABASE_URL=postgresql://videorama:videorama@localhost:5432/videorama

# Storage
STORAGE_BASE_PATH=/home/user/Videorama/storage

# VHS Integration
VHS_BASE_URL=http://localhost:8001
VHS_TIMEOUT=60

# LLM Configuration (OpenAI-compatible)
OPENAI_API_KEY=sk-your-api-key-here
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-4o

# External APIs
TMDB_API_KEY=your-tmdb-api-key
SPOTIFY_CLIENT_ID=your-spotify-client-id
SPOTIFY_CLIENT_SECRET=your-spotify-client-secret

# Telegram Bot
TELEGRAM_BOT_TOKEN=your-telegram-bot-token

# Security
SECRET_KEY=change-this-to-a-random-secret-key-in-production

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Vite Allowed Hosts (comma-separated)
# Add your deployment domains here
VITE_ALLOWED_HOSTS=localhost

# Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
